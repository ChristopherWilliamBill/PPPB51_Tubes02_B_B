<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/size30"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Order"
        android:textSize="@dimen/size30"
        android:layout_marginBottom="@dimen/size10"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginVertical="@dimen/size10">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Asal"
            android:textSize="@dimen/size25"/>
        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/dropdownKotaAsal"
            android:entries="@array/array_kota"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginVertical="@dimen/size10">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tujuan"
            android:textSize="@dimen/size25"/>
        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/dropdownKotaTujuan"
            android:entries="@array/array_kota"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginVertical="@dimen/size10">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tanggal"
            android:textSize="@dimen/size25"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="..."
            android:textSize="@dimen/size20"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginVertical="@dimen/size10">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Jam"
            android:textSize="@dimen/size20"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="..."
            android:textSize="@dimen/size20"/>
    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cari Travel"
        android:backgroundTint="@color/theme"
        android:id="@+id/btnCari"
        android:layout_gravity="center_horizontal"
        android:layout_marginVertical="@dimen/size20"/>
</LinearLayout>